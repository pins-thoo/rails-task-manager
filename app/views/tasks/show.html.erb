<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light justify-content-between">
    <h1><%= @task.title %></h1>
    <div class="btn btn-link">
          <%= link_to edit_task_path do %>
            <i class="far fa-edit">   Edit Task</i>
          <% end %>
    </div>
  </nav>
  <div class="card bg-light mb-3 d-flex justify-content-center" style="height: 50px;">
    <p class="card-text"><%= @task.details %></p>
  </div>
  <% if @task.completed %>
    <i class="far fa-check-square">This task is completed</i>
  <% else %>
    <i class="far fa-square">This task is not completed yet</i>
  <% end %>
  <div class="back">
    <%= link_to tasks_path do %>
      <i class="fas fa-history">  Back to List</i>
    <% end %>
  </div>
</div>

<h1><%= @task.title %></h1>
<%= @task.details %>
<% if @task.completed %>
  <i class="far fa-check-square">This task is completed</i>
<% else %>
  <i class="far fa-square">This task is not completed yet</i>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
